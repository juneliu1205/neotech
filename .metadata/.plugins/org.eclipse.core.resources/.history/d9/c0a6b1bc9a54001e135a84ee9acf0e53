package com.neotech.lesson08;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import com.neotech.utils.BaseClass;

public class Homework1 extends BaseClass {

	public static void main(String[] args) throws InterruptedException {
//		Homework 1: Use WebDriverWait
//        Verify element is enabled
//        Open chrome browser
//        Go to "https://the-internet.herokuapp.com/"
//        Click on the "Dynamic Controls" link
//        Click on enable button
//        Enter "Hello" and verify text is entered successfully
//        Close the browser

		setUp();
		
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(20));
		
		
		driver.findElement(By.xpath(" //a[normalize-space()='Dynamic Controls']")).click();
		Thread.sleep(1000);


		wait.until(ExpectedConditions.visibilityOf(driver.findElement(By.xpath("//button[normalize-space()='Enable']"))));
		
		driver.findElement(By.xpath("//input[@type='text']")).sendKeys("Hello");
	
		WebElement span = driver.findElement(By.xpath("//button[normalize-space()='Enable']"));
		System.out.println("Hello is enter and it's "+span.isDisplayed());
		
		Thread.sleep(3000);

		tearDown();
		
	}

}
