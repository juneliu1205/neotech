package tryCode;

	import java.util.Scanner;

	public class WordManipulation {
	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        System.out.print("Enter a word: ");
	        String word = scanner.nextLine();
	        scanner.close();

	        if (word.length() % 2 == 1 && word.length() >= 3) {
	            // Odd number of characters, 3 or more characters
	            int middleIndex = word.length() / 2;
	            System.out.println("Output: " + word.charAt(middleIndex));
	        } else if (word.length() == 1) {
	            // Single character
	            char character = word.charAt(0);
	            System.out.println("Output: " + character + character + character);
	        } else if (word.length() % 2 == 0 && word.length() >= 4) {
	            // Even number of characters, 4 or more characters
	            int middleIndex1 = (word.length() / 2) - 1;
	            int middleIndex2 = word.length() / 2;
	            System.out.println("Output: " + word.substring(middleIndex1, middleIndex2 + 1));
	        } else if (word.length() == 2) {
	            // 2 characters
	            System.out.println("Output: " + word + word);
	        } else {
	            // Invalid input
	            System.out.println("Invalid word! Please enter a valid word.");
	        }
	    }
	}

